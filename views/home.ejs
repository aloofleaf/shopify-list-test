<html>
<head>
	<title>This is a page</title>

	<script src="https://cdn.shopify.com/s/assets/external/app.js"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <!-- <link rel='stylesheet' href='/stylesheets/foundation.min.css' /> -->
  <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->

</head>
<body>


	<div style="padding:40px">
		<h1>Hi, this is a shopify app!</h1>

      <% for(var i=0; i<apiResponse['products'].length; i++){%>
        <% let item = apiResponse['products'][i]%>
        <h3>Product #<%= (i + 1) %>: <%= item['title'] %></h3>
        <p><%=item['body_html']%></p>
        <form action="/admin/products/<%=item['id']%>?_method=PUT" method="POST">
          <div>
            <input type="text" name="body_html">
          </div>
          <input type="submit">
        </form>
      <%}%>

	</div>
</body>
</html>